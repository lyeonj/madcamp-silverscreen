<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <!-- ticket.png -->
    <ImageView
        android:id="@+id/ticketBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ticket" />

    <!-- inner content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Scene Image -->
        <ImageView
            android:id="@+id/movieScene"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/movieTitle"
            android:layout_below="@id/movieScene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="16sp" />

        <!-- Rating -->
        <TextView
            android:id="@+id/movieRating"
            android:layout_below="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFDC16"
            android:layout_marginTop="2dp" />

        <!-- Review -->
        <TextView
            android:id="@+id/movieReview"
            android:layout_below="@id/movieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />

        <!-- Date & Place -->
        <TextView
            android:id="@+id/movieDatePlace"
            android:layout_below="@id/movieReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</FrameLayout>