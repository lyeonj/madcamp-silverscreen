<resources>
    <style name="BottomNavTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ImageRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
        <item name="android:thumb">@null</item>
    </style>
    <style name="WhiteCursor" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
    </style>
</resources>